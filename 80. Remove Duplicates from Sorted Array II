Overwrite + count

class Solution {
    public int removeDuplicates(int[] nums) {
        int n = 0;
        int count = 0;
        for(int i = 1; i < nums.length; i++){
            if(nums[i] != nums[n]){
                nums[++n] = nums[i];
                count = 0;
            }else{
                count++;
                if(count < 2){
                    nums[++n] = nums[i];
                }
            }
        }
        return n+1;
    }
}
